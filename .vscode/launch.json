  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Simulator via npm",
      "cwd": "${workspaceFolder}",
      "preLaunchTask": "Build",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run-script", "start:debug"],
      "skipFiles": ["<node_internals>/**"],
      "stopOnEntry": true
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Simulator Development Build via npm",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run-script", "start:dev:debug"],
      "skipFiles": ["<node_internals>/**"],
      "stopOnEntry": true
    }
  ]
}
