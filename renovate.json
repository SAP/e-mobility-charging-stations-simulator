{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "group:allNonMajor",
    "schedule:daily",
    ":maintainLockFilesWeekly"
  ],
  "packageRules": [
    {
      "matchFileNames": ["**/package.json"],
      "matchDepTypes": ["dependencies", "devDependencies", "optionalDependencies"],
      "rangeStrategy": "bump"
    }
  ]
}
